{
  "manifest_version": 2,

  "name": "SuperDSR",
  "description": "A little extension to make an RIT Desktop Support Representative's life just super.",
  "version": "0.3.6",

  "permissions": [
      "tabs",
      "storage"
  ],

  "browser_action": {
    "default_popup": "jumpfield.html",
    "default_icon": "icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      }
    }
  },

  "content_scripts": [
    {
      "matches": ["https://*.main.ad.rit.edu/MRcgi/MRTicketPage.pl*"],
      "js": ["js/tcenterLove.js", "js/quickAssign.js", "js/biggerDescription.js"],
      "css": ["css/footprints.css"]
    },
    {
      "matches": ["https://*.main.ad.rit.edu/MRcgi/MRhomepage.pl*"],
      "css": ["css/footprints.css"],
      "js": ["js/userSearch.js"]
    },
    {
      "matches": ["https://wiki.rit.edu/*"],
      "js": ["js/kickassWiki.js"],
      "css": ["css/wiki.css"]
    },
    {
      "matches": ["https://claws.rit.edu/admintools*"],
      "js": ["js/clawsTools.js"]
    },
    {
      "matches": ["https://apps.rit.edu/~a-tcent/index.php?manualTicket=true&type=2"],
      "js": ["libs/jquery-2.0.3.min.js", "js/tcenterAutofill.js"],
      "css": ["css/tcenterAutofill.css"]
    }
  ],
  "web_accessible_resources": [
    "libs/bootstrap.min.css",
    "libs/bootstrap.min.js",
    "libs/jquery-2.0.3.min.js",
    "libs/mousetrap.min.js"
  ]
}
