{
  "manifest_version": 2,

  "name": "SuperDSR",
  "description": "A little extension to make an RIT Desktop Support Representative's life just super.",
  "version": "0.1",

  "permissions": [
      "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "jumpfield.html"
  }

  "background": {
    "scripts": ["_init.js"],
    "persistent": true
  }

  "content scripts": [
    {
      "matches": ["https://footprints*.main.ad.rit.edu/MRcgi/MRTicketPage.pl*"],
      "js": ["content.js"]
    }
  ]
}