{
  "manifest_version": 2,

  "name": "SuperDSR",
  "description": "A little extension to make an RIT Desktop Support Representative's life just super.",
  "version": "0.2.1",

  "permissions": [
      "tabs"
  ],

  "browser_action": {
    "default_popup": "jumpfield.html",
    "default_icon": "icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.main.ad.rit.edu/MRcgi/MRTicketPage.pl*"],
      "js": ["content-scripts/js/tcenterLove.js", 
             "content-scripts/js/quickAssign.js", 
             "content-scripts/js/largerAssignees.js",
             "content-scripts/js/biggerDescription.js"],
      "css": ["content-scripts/css/footprints.css"]
    },
    {
      "matches": ["https://*.main.ad.rit.edu/MRcgi/MRhomepage.pl*"],
      "css": ["content-scripts/css/footprints.css"],
      "js": ["content-scripts/js/userSearch.js"]
    },
    {
      "matches": ["https://wiki.rit.edu/*"],
      "js": ["content-scripts/js/kickassWiki.js"],
      "css": ["content-scripts/css/wiki.css"]
    },
    {
      "matches": ["https://claws.rit.edu/admintools/*"],
      "js": ["content-scripts/js/clawsTools.js"]
    }
  ]
}